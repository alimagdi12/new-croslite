            <!-- Profile picture help block-->
            <div class="small font-italic text-muted mb-4">
              JPG or PNG no larger than 5 MB
            </div>
            <!-- Profile picture upload button-->
            <button class="btn btn-primary" type="button">
              Upload new image
            </button>
          </div>
        </div>
      </div>
      <div class="col-xl-8">
        <!-- Account details card-->
        <div class="card mb-4">
          <div class="card-header">Account Details</div>
          <div class="card-body">
            <form id="registrationForm" onsubmit="return validateForm(event)" action="/updateUser" method="POST">
              <!-- Form Group (username)-->
              <div class="mb-3">
                <label class="small mb-1" for="inputUsername">Username (how your name will appear to other users on the
                  site)</label>
                <label for="" style="position: absolute;left: 88%;">اسم المستخدم</label>
                <input class="form-control" id="inputUsername" type="text" placeholder="Enter your username" value="<%=userName %>" name="userName" />
              </div>
              <div class="mb-3">
                <label class="small mb-1" for="inputUsername">Company Name </label>
                <label for="" style="position: absolute;left: 88%;">اسم الشركة </label>
                <input class="form-control" id="inputUsername" type="text" placeholder="Enter your username" value="<%=companyName %>" name="companyName" />
              </div>https://github.com/alimagdi12/croslite
              <!-- Form Row-->
              <div class="row gx-3 mb-3">
                <!-- Form Group (first name)-->
                <div class="col-md-6">
                  <label class="small mb-1" for="fname">First name</label>
                  <label for="" style="position: absolute;left: 40%;">الاسم الاول</label>

                  <input class="form-control" id="fname" type="text" for="fname" placeholder="Enter your first name" value="<%= fName%>" name="fname" />
                  <div class="validation-message" id="fnameError"></div>
                </div>
                <!-- Form Group (last name)-->
                <div class="col-md-6">
                  <label class="small mb-1" for="lname">Last name</label><label for="" style="position: absolute;left: 88%;">الاسم الاخير </label>

                  <input class="form-control" id="lname" type="text" placeholder="Enter your last name" value="<%= lName%>" for="lname" name="lname" />
                  <div class="validation-message" id="lnameError"></div>
                </div>
              </div>
              <!-- Form Row        -->
              <div class="row gx-3 mb-3">
                <!-- Form Group (organization name)-->
                <div class="col-md-6">
                  <label class="small mb-1" for="inputOrgName">BirthDay</label>
                  <label for="" style="position: absolute;left: 40%;">تاريخ الميلاد </label>

                  <input class="form-control" id="inputOrgName" type="text" placeholder="Enter your birthDay" value="<%= birthDay%>" name="birthDay" />
                </div>
                <!-- Form Group (location)-->
                <div class="col-2">
                  <div class="input-group">
                    <label class="label">Gender</label>
                    <label for="" style="position: absolute;left: 60%;"> النوع</label>

                    <div class="p-t-10">
                      <label class="radio-container m-r-45">Male
                        <input type="radio" <%= gender === 'male' ? 'checked' : '' %> name="gender" value="male">
                        <span class="checkmark"></span>
                      </label>
                      <label class="radio-container">Female
                        <input type="radio" <%= gender === 'female' ? 'checked' : '' %> name="gender" value="female">
                        <span class="checkmark"></span>
                      </label>
                    </div>

                  </div>
                </div>
              </div>
              <!-- Form Group (email address)-->
              <div class="mb-3">
                <label class="small mb-1" for="email">Email address</label>
                <label for="" style="position: absolute;left: 85%;"> البريد الالكتروني</label>

                <input class="form-control" id="email" type="email" placeholder="Enter your email address" value="<%= email%>" name="email" />
                <div class="validation-message" id="emailError"></div>
              </div>
              <!-- Form Row-->
              <div class="row gx-3 mb-3">
                <!-- Form Group (phone number)-->
                <div class="col-md-6">
                  <label class="small mb-1" for="mobile">Phone number</label>
                  <label for="" style="position: absolute;left: 40%;"> رقم الهاتف</label>

                  <input class="form-control" id="mobile" type="tel" placeholder="Enter your phone number" value="<%= phone %>" name="mobile" />
                  <div class="validation-message" id="mobileError"></div>
                </div>

              </div>

              <!-- Save changes button-->
              <button class="btn btn-primary" type="submit">
                Save changes
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

